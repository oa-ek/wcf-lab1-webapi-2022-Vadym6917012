@page
@using AutoOA.Core
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = "~/Views/Shared/_NiceBlankLayout.cshtml";
}






<div class="container">
    <section class="section register min-vh-100 d-flex flex-column align-items-center justify-content-center py-4">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-4 col-md-6 d-flex flex-column align-items-center justify-content-center">

                    <div class="d-flex justify-content-center py-4">
                        <a href="index.html" class="logo d-flex align-items-center w-auto">
                            <img src="/assets/img/car.png" alt="">
                            <span class="d-none d-lg-block">AutoOA</span>
                        </a>
                    </div><!-- End Logo -->
                    <div class="card mb-3">
                        <div class="card-body">
                            <div class="pt-4 pb-2">
                                <h5 class="card-title text-center pb-0 fs-4">Увійдіть до свого облікового запису</h5>
                                <p class="text-center small">Введіть своє ім'я користувача та пароль для входу</p>
                            </div>
                            <form class="row g-3 needs-validation" id="account" method="post">

                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                <div class="col-12">
                                    <label for="yourUsername" class="form-label">Email:</label>
                                    <div class="input-group has-validation">
                                        <span class="input-group-text" id="inputGroupPrepend">@@</span>
                                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                                        <div asp-validation-for="Input.Email" class="invalid-feedback"></div>
                                    </div>
                                </div>

                                <div class="col-12">
                                    <label for="yourPassword" class="form-label">Пароль:</label>
                                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                                    <div asp-validation-for="Input.Password" class="invalid-feedback"></div>
                                </div>

                                <div class="col-12">
                                    <div class="form-check">
                                        <input class="form-check-input" asp-for="Input.RememberMe"/>
                                        <label class="form-check-label" for="rememberMe">Запам'ятати мене</label>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <button class="btn btn-primary w-100" type="submit">Увійти</button>
                                </div>
                                <div class="col-12">
                                    <p class="small mb-0">Відсутній обліковий запис? <a href="Identity/Account/Register">Зареєструватись</a></p>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
