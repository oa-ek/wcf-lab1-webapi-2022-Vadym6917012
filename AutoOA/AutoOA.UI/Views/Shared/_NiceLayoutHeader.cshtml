<!-- ======= Header ======= -->
<header id="header" class="header fixed-top d-flex align-items-center">
    <div class="d-flex align-items-center justify-content-between">
        <a href="/Home" class="logo d-flex align-items-center">
            <img src="/assets/img/car.png" alt="">
            <span class="d-none d-lg-block">AutoOA</span>
        </a>
        @if (User.IsInRole("Admin"))
        {
            <i class="bi bi-list toggle-sidebar-btn"></i>
        }
        @if (User.IsInRole("User"))
        {
            <div style="padding: 0 0px 0 15px">
                <a class="nav-profile" asp-controller="Vehicles" asp-action="Sellcar">
                    <span>Подати оголошення</span>
                </a>
            </div>
            <nav class="header-nav ms-auto">
                <div style="padding: 25px 0 0 0">
                    <ul>
                        <li>
                            <a class="nav-profile d-flex align-items-center  pe-0" href="#" data-bs-toggle="dropdown">
                                <h6>Валюта</h6>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end ">

                                <li>
                                    <a class="dropdown-item d-flex align-items-center" href="/Identity">
                                        <i class="bi bi-person"></i>
                                        <span>Гривня</span>
                                    </a>
                                </li>
                                <li>
                                    <hr class="dropdown-divider">
                                </li>

                                <li>
                                    <a class="dropdown-item d-flex align-items-center" href="/Identity">
                                        <i class="bi bi-people"></i>
                                        <span>Долар</span>
                                    </a>
                                </li>
                                <li>
                                    <hr class="dropdown-divider">
                                </li>

                                <li>
                                    <a class="dropdown-item d-flex align-items-center" href="/Identity">
                                        <i class="bi bi-people"></i>
                                        <span>Євро</span>
                                    </a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </nav>

        }
    </div><!-- End Logo -->

    <nav class="header-nav ms-auto">
        <ul class="d-flex align-items-center">
            <li class="nav-item d-block d-lg-none">
                <a class="nav-link nav-icon search-bar-toggle " href="#">
                    <i class="bi bi-search"></i>
                </a>
            </li><!-- End Search Icon-->

            <div class="search-bar">
                <form method="get" asp-controller="Home" asp-action="Index" class="search-form d-flex align-items-center">
                    <input type="text" name="searchString" value="@ViewData["GetVehicleDetails"]" placeholder="Search" title="Enter search keyword">
                    <button type="submit" title="Search"><i class="bi bi-search"></i></button>
                </form>
            </div><!-- End Search Bar -->

            <li class="nav-item dropdown pe-3">

                <a class="nav-link nav-profile d-flex align-items-center  pe-0" href="#" data-bs-toggle="dropdown">
                    <h6><partial name="_LoginPartial" /></h6>
                </a><!-- End Profile Iamge Icon -->

                <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow profile">
                    <li class="dropdown-header">
                        <h6><partial name="_LoginPartial" /></h6>
                    </li>
                    <li>
                        <hr class="dropdown-divider">
                    </li>

                    <li>
                        <a class="dropdown-item d-flex align-items-center" href="/Identity/Account/Manage">
                            <i class="bi bi-person"></i>
                            <span>Мій профіль</span>
                        </a>
                    </li>
                    <li>
                        <hr class="dropdown-divider">
                    </li>

                    <li>
                        <a class="dropdown-item d-flex align-items-center" href="/Identity/Account/Login">
                            <i class="bi bi-people"></i>
                            <span>Змінити користувача</span>
                        </a>
                    </li>
                    <li>
                        <hr class="dropdown-divider">
                    </li>

                    <li>
                        <a class="dropdown-item d-flex align-items-center" href="">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                                    <button type="submit" class="nav-link btn btn-link text-dark">Вийти</button>
                                </form>
                            }
                        </a>
                    </li>
                </ul><!-- End Profile Dropdown Items -->
            </li><!-- End Profile Nav -->

        </ul>
    </nav><!-- End Icons Navigation -->

</header><!-- End Header -->